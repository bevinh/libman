html
    head
        title Andrew Chalkley
        link(rel='stylesheet', href="/static/stylesheets/style.css", type='text/css')
    body
        include ./partials/_nav.pug
        h1 Patron:&nbsp;
            =patron.first_name + " " + patron.last_name
        form
            p
                label.for("first_name") First Name
                input(id="first_name", type="text", value=patron.first_name)
            p
                label.for("last_name") Last Name
                input(id="last_name", type="text", value=patron.last_name)
            p
                label.for("address") Address
                input(id="address", type="text", value=patron.address)
            p
                label.for("email") Email
                input(id="email", type="text", value=patron.email)
            p
                label.for("library_id") Library Id
                input(id="library_id", type="text", value=patron.library_id)
            p
                label.for("zip_code") Zip Code
                input(id="zip_code", type="text", value=patron.zip_code)
            p
                input(type="submit", value="Update")
        h2 Loan History
        table
            thead
                tr
                    th Book
                    th Patron
                    th Loaned on
                    th Return by
                    th Returned on
                    th Action
            tbody
            each loan in loans
                tr
                    td
                        a(href="book_detail/" + loan.book_id)
                            =loan.Book.title
                    td
                        a(href="patron_detail/" + patron.id)
                            =patron.first_name + " " + patron.last_name
                    td
                        =moment(loan.loaned_on).format("YYYY-MM-D")
                    td
                        =moment(loan.return_by).format("YYYY-MM-D")
                    td
                        =moment(loan.returned_on).format('YYYY-MM-D')
                    td
                        a.button(href="/all_books/return_book/" + loan.book_id) Return Book

