html
    head
        title Return Book
        link(rel='stylesheet', href="/static/stylesheets/style.css", type='text/css')
    body
        include ./partials/_nav.pug
        h1 Patron: Return Book
        p
            strong Book Title: &nbsp;
                =loan.Book.title
        p
            strong Loaned To:&nbsp;
                =loan.Patron.first_name + " " + loan.Patron.last_name
        p
            strong Loaned On:&nbsp;
                =moment(loan.loaned_on).format("YYYY-MM-D")
        p
            strong Return By:&nbsp;
                =moment(loan.return_by).format("YYYY-MM-D")
        form(action="/all_books/return_book/" + loan.id + "/1" + "?_method=PUT", method="POST")
            p
                label(for="returned_on")
                input(id=returned_on, type="text", name="returned_on" value=date)
            p
                input(type="submit", value="Return Book")